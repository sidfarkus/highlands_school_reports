<Window x:Class="Highlands.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Loaded="Window_Loaded"
        Title="MainWindow" Height="350" Width="525" Icon="/Highlands;component/Images/main.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ToolBar Grid.Row="0">
            <Button Click="btnLogout_Click">Logout</Button>
        </ToolBar>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Label>Student:</Label>
            <TextBox Name="entStudent" VerticalAlignment="Center" MinWidth="100" TextChanged="TextBox_TextChanged"/>
            <CheckBox Name="chkMyStudents" IsChecked="True" VerticalAlignment="Center" Margin="5" Click="chkMyStudents_Click">My Students/Courses Only</CheckBox>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <Label>Grade Level:</Label>
            <ComboBox Name="cmbGradeLevel" MinWidth="50"  Margin="5" SelectionChanged="cmbGradeLevel_SelectionChanged">All</ComboBox>
            <Label>Quarter:</Label>
            <ComboBox Name="cmbQuarter" MinWidth="75" Margin="5" SelectionChanged="cmbQuarter_SelectionChanged">All</ComboBox>
            <Label>Course:</Label>
            <ComboBox Name="cmbCourse" MinWidth="75"  Margin="5" SelectionChanged="cmbCourse_SelectionChanged">All</ComboBox>
            <Button Padding="5" Name="btnGradeAll">Grade All</Button>
        </StackPanel>
        <ListBox Name="lst" Grid.Row="3" MouseDoubleClick="lst_MouseDoubleClick" />
        <StatusBar Grid.Row="4">
            <StatusBarItem Name="staCount">Count</StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
